---
import Wooper from '../../public/Wooper.webp';

import List from "./List.astro"
import Icon from "./Icon.astro";

const items = [
	{ label: 'blogs', link: '/' },
	{ label: 'about', link: '/' },
	{ label: 'wubsnata', link: '/' },
];
---
<style>
	.sidebar-container {
		display: flex;
		flex-direction: column;
		background-color: #f0f0f0;
		height: 100vh;
		width: 20%;
		position: fixed;
		top: 0;
	}

	.divider {
		opacity: 0.3;
	}
</style>

<div class="sidebar-container">
		<Icon 
			link={Wooper} 
			alt="wooper pokemon" 
			iconLabel="aaron's blog"
		/>
		<List items={items} />
</div>
