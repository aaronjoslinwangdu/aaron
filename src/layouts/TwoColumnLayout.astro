---
import Layout from "./Layout.astro";
---
<style>
    .container {
        display: flex;
        flex-direction: row;
        height: 100vh;
    }

    .left-column {
        width: 20%;
    }

    .right-column {
        width: 80%;
    }
    
    .divider {
        margin: 0 8px;
        opacity: 0.3;
    }
</style>

<Layout>
    <div class="container">
        <div class="left-column">
            <slot name="left" />
        </div>
        <hr class="divider" />
        <div class="right-column">
            <slot name="right" />
        </div>
    </div>
</Layout>
