---
import Layout from "./Layout.astro";
---
<style>
    .container {
        display: flex;
        flex-direction: row;
        height: 100vh;
    }

    .left-column {
       background-color: #bcbcff;
        width: 20%;
    }

    .right-column {
        background-color: #ffb4b4;
        width: 80%;
    }
</style>
<Layout>
    <div class="container">
        <div class="left-column">
            <slot name="left" />
        </div>
        <div class="right-column">
            <slot name="right" />
        </div>
    </div>
</Layout>
