---
interface Props {
  title: string
  subtitles: any[]
}

const { title, subtitles } = Astro.props
---

<style lang="scss">
  .container {
    display: flex;
    flex-direction: column;
  }

  .title-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 25px 50px;
  }

  .subtitle-container {
    display: flex;
    flex-direction: row;
    justify-content: center;
  }

  .subtitle-item {
    color: #4a4a4a;
    font-size: larger;
    padding: 0 10px;
  }

  .subtitle-item:nth-child(n + 2) {
    border-left: 2px solid #bbbdbb;
  }
</style>

<div class="container">
  <div class="title-container">
    <h1>{title}</h1>
    <div class="subtitle-container">
      {subtitles.map((sub) => <span class="subtitle-item">{sub}</span>)}
    </div>
  </div>
  <div class="title-container">
    <slot />
  </div>
</div>
